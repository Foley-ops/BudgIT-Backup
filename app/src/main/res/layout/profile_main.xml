<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4E4"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/stressed_duck"
        android:layout_width="438dp"
        android:layout_height="263dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/profilemainduck"
        app:layout_constraintBottom_toTopOf="@+id/data_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166" />


    <Button
        android:id="@+id/chart_view_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="#6750A3"
        android:text="@string/chartView"
        android:textColor="#FEFEFE"
        app:cornerRadius="5dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data_button"
        app:strokeColor="#C5AFFF"
        app:strokeWidth="2dp" />


    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="100dp"
        android:background="#6750A3"
        android:text="@string/logout"
        android:textColor="#FEFEFE"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paymentCalc_viewButton"
        app:layout_constraintVertical_bias="0.531"
        app:strokeColor="#C5AFFF"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/data_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="308dp"
        android:background="#6750A3"
        android:backgroundTintMode="src_atop"
        android:text="@string/dataEntry"
        android:textColor="#FEFEFE"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#C5AFFF"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/paymentCalc_viewButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:background="#6750A3"
        android:backgroundTintMode="src_atop"
        android:text="@string/calc_payAssit"
        android:textColor="#FEFEFE"
        app:cornerRadius="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chart_view_button"
        app:layout_constraintVertical_bias="0.009" />
</androidx.constraintlayout.widget.ConstraintLayout>